    <!-- Text Field Theme. -->
    <style name="Widget.Paninti.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.Paninti.TextInputLayout.FilledBox
        </item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">@dimen/zero_dp</item>
        <item name="boxStrokeWidthFocused">@dimen/zero_dp</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/TextAppearance.Caption1</item>
        <item name="errorTextColor">@color/alert_error</item>
        <item name="expandedHintEnabled">true</item>
        <item name="hintTextAppearance">@style/TextAppearance.Overline</item>
        <item name="hintTextColor">@color/blue_500</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.Body2</item>
        <item name="placeholderTextColor">@color/label_secondary</item>
        <item name="suffixTextAppearance">@style/TextAppearance.Body2</item>
        <item name="suffixTextColor">@color/label_tertiary</item>
    </style>

